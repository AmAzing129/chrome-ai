{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "chrome-ai-polyfill": ["src/polyfill/index.ts"],
      "chrome-ai/*": ["src/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
